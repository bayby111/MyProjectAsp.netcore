@model X.PagedList.IPagedList<AppIdea.Areas.Identity.Data.Comment>
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<h1>List Comment From User</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Text
            </th>
            <th>
                Users
            </th>
            <th>
                Ideas
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Users.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ideas.Content)
            </td>
            <td>
               
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="bi bi-trash3-fill"></i> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <p class="text-muted">Page</p>
    @Html.PagedListPager(Model, page =>Url
    .Action("Index", "Comment", new {page = page}),  new PagedListRenderOptions {
    LiElementClasses = new string[] { "page-item" },
    PageClasses = new string[] { "page-link" }})
</div>
