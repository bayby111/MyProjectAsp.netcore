@model AppIdea.Core.ViewModel.EditViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}
<main>
    <div class="py-5 text-center">
      
      <h2>Edit</h2>
    </div>

    <div class="row g-5">
      <div class="col-md-7 col-lg-8">
        <h4 class="mb-3">Update the User</h4>
            @using (Html.BeginForm("Edit", "User", FormMethod.Post))
            {
               @Html.HiddenFor(h=>@Model.User.Id)
              <div class="row g-3">
                <div class="col-sm-6">
                        <label asp-for="@Model.User.Firstname" class="form-label">Name</label>
                        <input asp-for="@Model.User.Firstname" class="form-control" autocomplete="username" aria-required="true">
                        <span asp-validation-for="@Model.User.Firstname" class="text-danger"></span>
                </div>


                <div class="col-12">
                  <label asp-for="@Model.User.Email" class="form-label">Email</label>
                  <div class="input-group has-validation">
                    <span class="input-group-text"></span>
                                <input asp-for="@Model.User.Email" class="form-control" autocomplete="username"  aria-required="true">
                                <span asp-validation-for="@Model.User.Email" class="text-danger"></span>
                  <div class="invalid-feedback">
                      Your Email is required.
                    </div>
                  </div>
                </div>


         
              </div>


              <hr class="my-4">

              <h4 class="mb-3">Role</h4>

              <div class="my-3">
                  
                  @for(int i = 0; i < @Model.Role.Count(); i++)
                  {
                        <div class="form-check">
                            @Html.CheckBoxFor(c => Model.Role[i].Selected, new{@class="form-check-input"})
                            @Html.HiddenFor(h => Model.Role[i].Value)
                            @Html.LabelFor(l => Model.Role[i].Selected, Model.Role[i].Text, new{@class="form-check-label"})
                            @Html.HiddenFor(h => Model.Role[i].Text)
                        </div>

                  }
                       @* @foreach(var role in Model.Role)
                        {
                            <div class="form-check">
                                <input id="@role.Value" name="paymentMethod" type="radio" class="form-check-input" checked="@role.Selected" required="">
                                <label class="form-check-label" asp-for ="@role.Value" for="credit">@role.Text</label>
                            </div>
                        } *@

              </div>

              <hr class="my-4">

              <button class="w-100 btn btn-primary btn-lg" type="submit">Save</button>
                <a asp-action="Index">Back to List</a>
         
            }
      </div>
    </div>
  </main>