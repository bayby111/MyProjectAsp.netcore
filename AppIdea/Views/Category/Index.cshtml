@model X.PagedList.IPagedList<AppIdea.Areas.Identity.Data.Category>
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<div class="text-center">
    <h1 class="display-4"></h1>
    <div class="text-center mt-4">
        <a asp-controller ="category" asp-action="Create" class="btn btn-success">Create New Categories</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Handle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cate in Model)
            {
                <tr>
                    <td>@cate.Name</td>
                    <td>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@cate.Id" class="btn btn-danger btn-sm rounded-0"><i class="bi bi-trash3-fill"></i> Delete</a> ||
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@cate.Id" class="btn btn-warning btn-sm rounded-0"><i class="bi bi-pencil-fill"></i> Edit</a>||
                        <a asp-controller="Category" asp-action="Details" asp-route-id="@cate.Id" class="btn btn-info btn-sm rounded-0"><i class="bi bi-eye-fill"></i> View</a>

                    </td>
                </tr>

            }
        </tbody>
    </table>

</div>
<div>
    <p class="text-muted">Page</p>
    @Html.PagedListPager(Model, page => Url.ActionLink("Index", "Category", new{ page = page}),  new PagedListRenderOptions {
    LiElementClasses = new string[] { "page-item" },
    PageClasses = new string[] { "page-link" }})
</div>