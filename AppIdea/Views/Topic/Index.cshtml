@model X.PagedList.IPagedList<AppIdea.Areas.Identity.Data.Topic>
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<div class="text-center mt-4">
    <a asp-controller="Topic" asp-action="Create" class="btn btn-success">Create New Topic</a>
</div>

<table class="table text-center">
    <tbody>
        <tr>
            <th>Name</th>
            <th>Deadline_1</th>
            <th> Deadeline_2</th>
            <th>Handle</th>
        </tr>

        @foreach (var topic in Model)
        {
            <tr>
                <td>@topic.Name</td>
                <td>@topic.Deadline_1</td>
                <td>@topic.Dealine_2</td>
                <td>
                    <a asp-controller="Topic" asp-action="Delete" asp-route-id="@topic.Id" class="btn btn-danger btn-sm rounded-0"><i class="bi bi-trash3-fill"></i> Delete</a> ||
                    <a asp-controller="Topic" asp-action="Edit" asp-route-id="@topic.Id" class="btn btn-warning btn-sm rounded-0"><i class="bi bi-pencil-fill"></i> Edit</a>||
                    <a asp-controller="Topic" asp-action="Details" asp-route-id="@topic.Id" class="btn btn-info btn-sm rounded-0"><i class="bi bi-eye-fill"></i> View</a>
                </td>
            </tr>
        }

    </tbody>
</table>
<div>
  <p class="text-muted">Page</p>  
  @Html.PagedListPager(Model, page => Url.Action("Index", "Topic", new{ page =page }),  new PagedListRenderOptions {
    LiElementClasses = new string[] { "page-item" },
    PageClasses = new string[] { "page-link" }})
</div>
