@using Microsoft.AspNetCore.Identity;
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<IdentityRole>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

    <div class="text-center mt-4">
        <a asp-controller="RoleView" asp-action="Create" class="btn btn-success">Create New role</a>
    </div>

    <table class="table text-center">
        <tbody>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Handle</th>
            </tr>

            @foreach(var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>
                    <a asp-controller="RoleView" asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger btn-sm rounded-0"><i class="bi bi-trash3-fill"></i> Delete</a> ||
                    <a asp-controller="RoleView" asp-action="Edit" asp-route-id="@role.Id" class="btn btn-warning btn-sm rounded-0"><i class="bi bi-pencil-fill"></i> Edit</a>
                    </td>
                </tr>
            }
          
       
        </tbody>
    </table>
    <div>
    <p class="text-muted">Page</p>
    @Html.PagedListPager(Model, page=>Url.Action("Index", "RoleView", new{page=page}),  new PagedListRenderOptions {
    LiElementClasses = new string[] { "page-item" },
    PageClasses = new string[] { "page-link" }})
    </div>

